<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border_black"
    android:layout_width="600dp"
    android:layout_height="700dp">


    <ImageButton
        android:id="@+id/pago_tarjeta"
        android:layout_width="188dp"
        android:layout_height="104dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="472dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitCenter"
        android:src="@mipmap/pagotarjeta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/pago_efectivo"
        android:layout_width="188dp"
        android:layout_height="104dp"
        android:layout_marginStart="344dp"
        android:layout_marginBottom="472dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitCenter"
        android:src="@mipmap/pagoefectivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/a_pagar"
        android:layout_width="214dp"
        android:layout_height="91dp"
        android:layout_marginStart="316dp"
        android:layout_marginBottom="348dp"
        android:ems="10"
        android:hint="A PAGAR"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/a_devolver"
        android:layout_width="230dp"
        android:layout_height="92dp"
        android:layout_marginStart="316dp"
        android:layout_marginBottom="88dp"
        android:ems="10"
        android:hint="A DEVOLVER"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/entregado"
        android:layout_width="199dp"
        android:layout_height="84dp"
        android:layout_marginStart="316dp"
        android:layout_marginBottom="252dp"
        android:ems="10"
        android:hint="ENTREGADO"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tx_apagar"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="372dp"
        android:text="TOTAL A PAGAR: "
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tx_entregado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="276dp"
        android:text="ENTREGADO POR CLIENTE:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tx_adevolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="112dp"
        android:text="A DEVOLVER:"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/tramitar_pago"
        android:layout_width="321dp"
        android:layout_height="74dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitCenter"
        android:src="@mipmap/tramitarpago"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eu_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="532dp"
        android:layout_marginBottom="360dp"
        android:text="€"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eu_entre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="528dp"
        android:layout_marginBottom="260dp"
        android:text="€"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eu_devo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="548dp"
        android:layout_marginBottom="100dp"
        android:text="€"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/comprobar"
        android:layout_width="245dp"
        android:layout_height="52dp"
        android:layout_marginStart="304dp"
        android:layout_marginBottom="200dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitCenter"
        android:src="@mipmap/comprobarimporte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>