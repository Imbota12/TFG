
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@drawable/border_black">

    <ImageView
        android:id="@+id/im_produ_comprado"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/n_produ_comprado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/im_produ_comprado"
        app:layout_constraintTop_toTopOf="@id/im_produ_comprado" />

    <TextView
        android:id="@+id/cod_produ_comprado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/im_produ_comprado"
        app:layout_constraintTop_toBottomOf="@id/n_produ_comprado" />

    <TextView

        android:id="@+id/precioUnidad_comprado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@id/tx_precio_comprado"
        app:layout_constraintStart_toEndOf="@id/im_produ_comprado"
        app:layout_constraintTop_toBottomOf="@id/cod_produ_comprado" />

    <TextView
        android:id="@+id/tx_precio_comprado"
        android:text="â‚¬/Unidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/precioUnidad_comprado"
        app:layout_constraintTop_toBottomOf="@id/cod_produ_comprado" />

    <Button
        android:id="@+id/disminuirCantidad_comprado"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/im_produ_comprado"
        app:layout_constraintTop_toBottomOf="@id/precioUnidad_comprado" />
    <EditText
        android:id="@+id/cantidad_comprado"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text=" "
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/disminuirCantidad_comprado"
        app:layout_constraintTop_toBottomOf="@id/precioUnidad_comprado"
        />

    <Button
        android:id="@+id/aumentarCantidad_comprado"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/cantidad_comprado"
        app:layout_constraintTop_toBottomOf="@id/precioUnidad_comprado" />




</androidx.constraintlayout.widget.ConstraintLayout>
