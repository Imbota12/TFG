<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border_black"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="506dp"
        android:layout_marginStart="600dp"
        android:layout_marginBottom="92dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/linearecta" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="1093dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="616dp"
        android:background="@color/black"
        android:text="RECUPERAR CREDENCIALES DE SU CUENTA DE ACCESO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/recupera_nombre"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:layout_marginStart="292dp"
        android:layout_marginBottom="516dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:hint="INTRODUZCA SU NOMBRE"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/recupera_apellido"
        android:layout_width="262dp"
        android:layout_height="64dp"
        android:layout_marginStart="292dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:hint="INTRODUZCA SU APELLIDO"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/recupera_dni"
        android:layout_width="250dp"
        android:layout_height="69dp"
        android:layout_marginStart="296dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:hint="INTRODUZCA SU DNI"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/recupera_telefono"
        android:layout_width="259dp"
        android:layout_height="66dp"
        android:layout_marginStart="296dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:hint="INTRODUZCA SU TELEFONO"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="516dp"
        android:text="NOMBRE A BUSCAR:"
        android:background="@color/white"
        android:textSize="22sp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="412dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:text="APELLIDOS A BUSCAR:"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="292dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:text="DNI A BUSCAR:"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="168dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:text="TELEFONO A BUSCAR"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="672dp"
        android:layout_marginBottom="556dp"
        android:text="SU CORREO DE ACCESO ES :"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mostrar_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="908dp"
        android:layout_marginBottom="488dp"
        android:text=" "
        android:textColor="@color/design_default_color_error"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bt_buscar_credenciales"
        android:layout_width="237dp"
        android:layout_height="103dp"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="44dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitCenter"
        android:src="@mipmap/buscacredenciales"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/reset_contra"
        android:layout_width="255dp"
        android:layout_height="84dp"
        android:layout_marginStart="788dp"
        android:layout_marginBottom="380dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitCenter"
        android:src="@mipmap/restablecercontra"
        android:text="REESTABLECER CONTRASEÑA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/passwd_reset"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginStart="796dp"
        android:layout_marginBottom="248dp"
        android:ems="10"
        android:hint="CONTRASEÑA NUEVA"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/passwd_reset_veri"
        android:layout_width="274dp"
        android:layout_height="63dp"
        android:layout_marginStart="796dp"
        android:layout_marginBottom="144dp"
        android:ems="10"
        android:hint="REPITA CONTRASEÑA NUEVA"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_contraR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="672dp"
        android:layout_marginBottom="320dp"
        android:text="INTRODUZCA NUEVA CONTRASEÑA:"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_contraRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="672dp"
        android:layout_marginBottom="208dp"
        android:text="REPITA LA NUEVA CONTRASEÑA:"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bt_restablecer_contra"

        android:layout_width="229dp"
        android:layout_height="84dp"
        android:layout_marginStart="812dp"
        android:layout_marginBottom="52dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitCenter"
        android:src="@mipmap/cambiarcontra"
        android:text="CAMBIAR CONTRASEÑA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>