<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".vistas.RealizarDevolucion">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_productos_ticket"
        android:layout_width="439dp"
        android:layout_height="356dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_productos_a_devolver"
        android:layout_width="438dp"
        android:layout_height="358dp"
        android:layout_marginStart="580dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/escanear_ticket"
        android:layout_width="198dp"
        android:layout_height="54dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="600dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitXY"
        android:src="@mipmap/escanearticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="438dp"
        android:layout_height="33dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="504dp"
        android:background="@color/black"
        android:text="PRODUCTOS DEL TICKET"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="438dp"
        android:layout_height="33dp"
        android:layout_marginStart="580dp"
        android:layout_marginBottom="504dp"
        android:background="@color/black"
        android:text="PRODUCTOS A DEVOLVER"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="580dp"
        android:layout_marginBottom="76dp"
        android:background="@color/white"
        android:text="TOTAL A DEVOLVER:"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/total_a_devolver"
        android:layout_width="226dp"
        android:layout_height="64dp"
        android:layout_marginStart="776dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:text="0"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:src="@mipmap/confirmardevo"
        android:id="@+id/realizar_devolucion"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/cancelar_devolucion"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="296dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitXY"
        android:src="@mipmap/cancelardevo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1004dp"
        android:layout_marginBottom="60dp"
        android:text="€"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/cod_barras_ticket"
        android:layout_width="411dp"
        android:layout_height="58dp"
        android:layout_marginStart="328dp"
        android:layout_marginBottom="604dp"
        android:background="@drawable/border_black"
        android:hint="CODIGO BARRAS TICKET COMPRA"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/buscar_ticket"
        android:layout_width="190dp"
        android:layout_height="59dp"
        android:layout_marginStart="784dp"
        android:layout_marginBottom="600dp"
        android:background="@android:color/transparent"
        android:contentDescription="añadirProducto"
        android:scaleType="fitXY"
        android:src="@mipmap/buscarticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="404dp"
        android:layout_marginStart="512dp"
        android:layout_marginBottom="132dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/linearecta" />
</androidx.constraintlayout.widget.ConstraintLayout>