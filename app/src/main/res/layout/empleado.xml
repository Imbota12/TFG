<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1040dp"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/border_black">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_dni"
        android:textSize="22dp"
        android:text="DNI EMPLEADO: "
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/dni_emple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="DNI EMPLEADO"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/tx_dni"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/tx_nombre"
        android:textSize="16sp"
        android:text="NOMBRE Y APELLIDOS :"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tx_dni"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/nombre_emple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="NOMBRE EMPLEADO"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/dni_emple"
        app:layout_constraintStart_toEndOf="@id/tx_nombre"
         />


    <TextView
        android:id="@+id/apellido_emple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="APELLIDO EMPLEADO"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/nombre_emple"
        app:layout_constraintTop_toBottomOf="@id/dni_emple"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/tx_telefone"
        android:textSize="22sp"
        android:text="TELF :"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tx_nombre"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/telefono_empleado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textAlignment="center"
        android:text="TELEFONO EMPLEADO"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/tx_telefone"
        app:layout_constraintTop_toBottomOf="@id/nombre_emple" />

    <TextView
        android:id="@+id/correo_empleado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="CORREO EMPLEADO"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="400dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_telefone" />

    <ImageButton
        android:id="@+id/llamada"
        android:layout_width="105dp"
        android:layout_height="101dp"
        app:srcCompat="@mipmap/llamadas"
        tools:layout_editor_absoluteX="608dp"
        tools:layout_editor_absoluteY="25dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/apellido_emple"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="80dp"
        android:contentDescription="llamada"/>

    <ImageButton
        android:id="@+id/correo"
        android:layout_width="88dp"
        android:layout_height="87dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/llamada"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/correo"
        android:contentDescription="correo"/>

    <CheckBox
        android:id="@+id/cb_activo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿ ACTIVO ?"
        android:textSize="22dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="35dp"
        tools:layout_editor_absoluteX="539dp"
        tools:layout_editor_absoluteY="161dp"
        app:layout_constraintStart_toEndOf="@id/correo_empleado"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Switch
        android:id="@+id/tipo"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="8dp"
        android:text="VENDEDOR     "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_repone"
        android:text="REPONEDOR"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toEndOf="@id/tipo"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/despido"
        android:layout_width="104dp"
        android:layout_height="97dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/despido"
        tools:layout_editor_absoluteX="779dp"
        tools:layout_editor_absoluteY="131dp"
        android:contentDescription="despido"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/cb_activo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="15dp"
        />

    <ImageButton
        android:id="@+id/contrato"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/correo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/contratar"
        android:scaleType="fitCenter"
        android:contentDescription="contrato"
        android:background="@android:color/transparent"/>


</androidx.constraintlayout.widget.ConstraintLayout>