<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="620dp"
    android:background="@drawable/border_black"
    android:layout_height="650dp">

    <EditText
        android:id="@+id/et_descrip_a_editar"
        android:layout_width="311dp"
        android:layout_height="172dp"
        android:layout_marginStart="216dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:hint="DESCRIPCIÓN DEL PRODUCTO"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_nombre_a_editar"
        android:layout_width="306dp"
        android:layout_height="56dp"
        android:layout_marginStart="216dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:hint="NOMBRE DEL PRODUCTO"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="292dp"
        android:text="NOMBRE \nDEL PRODUCTO:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="228dp"
        android:text="DESCRIPCIÓN \nDEL PRODUCTO:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="40dp"
        android:text="PRECIO / UNIDAD \nPRODUCTO:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_imagen_a_editar"
        android:layout_width="180dp"
        android:layout_height="187dp"
        android:layout_marginStart="412dp"
        android:layout_marginBottom="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/productosinimagen" />

    <ImageButton
        android:id="@+id/bt_editar_foto"
        android:layout_width="162dp"
        android:layout_height="70dp"
        android:layout_marginStart="236dp"
        android:layout_marginBottom="472dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        android:src="@mipmap/editarimagen"
        android:text="EDITAR FOTO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bt_tomar_foto"
        android:layout_width="169dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="468dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        android:src="@mipmap/tomarfotop"
        android:text="TOMAR FOTO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bt_seleccionar_foto"
        android:layout_width="168dp"
        android:layout_height="77dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="356dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        android:src="@mipmap/seleccionarfoto"
        android:text="SELECCIONAR FOTO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bt_cancelar_foto"
        android:layout_width="162dp"
        android:layout_height="70dp"
        android:layout_marginStart="236dp"
        android:layout_marginBottom="356dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        android:src="@mipmap/cancelarcambio"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_precio_a_editar"
        android:layout_width="260dp"
        android:layout_height="73dp"
        android:layout_marginStart="216dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/border_black"
        android:ems="10"
        android:hint="PRECIO/ UNIDAD"
        android:textSize="28dp"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="488dp"
        android:layout_marginBottom="36dp"
        android:text="€"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>