<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".vistas.ListaInventario">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:layout_marginBottom="720dp"
        android:text="LISTA DE PRODUCTOS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_codigo_buscar"
        android:layout_width="417dp"
        android:layout_height="73dp"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="620dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="CODIGO DE BARRAS DEL PRODUCTO"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_productos"
        android:layout_width="850dp"
        android:layout_height="453dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/genera_Excel"
        android:layout_width="212dp"
        android:layout_height="100dp"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:contentDescription="generarExcel"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/generarexcel" />

    <ImageButton
        android:id="@+id/bajo_stock"
        android:layout_width="221dp"
        android:layout_height="111dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/notificarbajostock" />

    <ImageButton
        android:id="@+id/escanear_producto"
        android:layout_width="276dp"
        android:layout_height="76dp"
        android:layout_marginStart="604dp"
        android:layout_marginBottom="616dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/escanearcodigo" />
</androidx.constraintlayout.widget.ConstraintLayout>