<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".vistas.ListaInventario">

    <EditText
        android:id="@+id/et_codigo_buscar"
        android:layout_width="417dp"
        android:layout_height="73dp"
        android:layout_marginStart="208dp"
        android:layout_marginBottom="604dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="CODIGO DE BARRAS DEL PRODUCTO"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_productos"
        android:layout_width="850dp"
        android:layout_height="475dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="116dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/genera_Excel"
        android:layout_width="181dp"
        android:layout_height="84dp"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:contentDescription="generarExcel"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/generarexcel" />

    <ImageButton
        android:id="@+id/bajo_stock"
        android:layout_width="191dp"
        android:layout_height="87dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/notificarbajostock" />

    <ImageButton
        android:id="@+id/escanear_producto"
        android:layout_width="276dp"
        android:layout_height="76dp"
        android:layout_marginStart="676dp"
        android:layout_marginBottom="604dp"
        android:background="@android:color/transparent"
        android:contentDescription="bajoStock"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/escanearcodigo" />

    <ImageButton
        android:id="@+id/volvermenu"
        android:layout_width="138dp"
        android:layout_height="90dp"
        android:layout_marginStart="936dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="generarExcel"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/volvermenu" />
</androidx.constraintlayout.widget.ConstraintLayout>